generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  rides     Ride[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Driver {
  id        Int       @id @default(autoincrement())
  name      String
  description String
  vehicle   String
  rating    Int
  ratePerKm Float
  minKm     Float
  rides     Ride[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Ride {
  id          Int       @id @default(autoincrement())
  customer    User      @relation(fields: [customerId], references: [id])
  customerId  String
  driver      Driver?   @relation(fields: [driverId], references: [id])
  driverId    Int?
  origin      String
  destination String
  distance    Float
  duration    String
  value       Float
  createdAt   DateTime  @default(now())
}
